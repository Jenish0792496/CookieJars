@model MvcCookieJars.Models.CookieGenereViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Cookies" asp-action="Index">
    <p>
        <select asp-for="Ingridients" asp-items="Model.MainIngredents">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />

    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CookieName[0].CookieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookieName[0].MainIngredents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookieName[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookieName[0].Pieces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookieName[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookieName[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CookieName) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CookieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainIngredents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pieces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
